<odoo>
    <data noupdate="1">

        <!-- Sequences for patient id -->
        <record id="seq_patient_order" model="ir.sequence">
            <field name="name">Patient Sequence</field>
            <field name="code">hospital.patient.sequence</field>
            <field name="prefix">PTNT</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

            <!-- Sequences for appointment id -->
        <record id="seq_appointment_order" model="ir.sequence">
            <field name="name">Appointment Sequence</field>
            <field name="code">hospital.appointment.sequence</field>
            <field name="prefix">APT</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>